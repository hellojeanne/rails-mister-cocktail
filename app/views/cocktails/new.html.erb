<h1>Create a new cocktail</h1>

<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%=simple_form_for(@cocktail) do |f| %>
      <%= f.input :name %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>

<button class='btn btn-primary button'><%= link_to "Go back", cocktails_path %></button>
